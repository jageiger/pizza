<p id="notice"><%= notice %></p>

<h1>Listing Applied Mod Groups</h1>

<table>
  <thead>
    <tr>
      <th>Modifier group</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applied_mod_groups.each do |applied_mod_group| %>
      <tr>
        <td><%= applied_mod_group.modifier_group_id %></td>
        <td><%= applied_mod_group.item_id %></td>
        <td><%= link_to 'Show', applied_mod_group %></td>
        <td><%= link_to 'Edit', edit_applied_mod_group_path(applied_mod_group) %></td>
        <td><%= link_to 'Destroy', applied_mod_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

