<p id="notice"><%= notice %></p>

<h1>Listing Cart Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Order</th>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Special instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.user_id %></td>
        <td><%= cart_item.order_id %></td>
        <td><%= cart_item.item_id %></td>
        <td><%= cart_item.price %></td>
        <td><%= cart_item.quantity %></td>
        <td><%= cart_item.special_instructions %></td>
        <td><%= link_to 'Show', cart_item %></td>
        <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

