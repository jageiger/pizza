<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Name</th>
      <th>Alt name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Cost</th>
      <th>Quantity</th>
      <th>Product code</th>
      <th>Sku</th>
      <th>Extras price</th>
      <th>Fancy interface</th>
      <th>Interface</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.stock %></td>
        <td><%= item.name %></td>
        <td><%= item.alt_name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.cost %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product_code %></td>
        <td><%= item.SKU %></td>
        <td><%= item.extras_price %></td>
        <td><%= item.fancy_interface %></td>
        <td><%= item.interface %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

