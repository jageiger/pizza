<p id="notice"><%= notice %></p>

<h1>Listing Selected Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>User</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selected_addresses.each do |selected_address| %>
      <tr>
        <td><%= selected_address.address_id %></td>
        <td><%= selected_address.user_id %></td>
        <td><%= selected_address.order_id %></td>
        <td><%= link_to 'Show', selected_address %></td>
        <td><%= link_to 'Edit', edit_selected_address_path(selected_address) %></td>
        <td><%= link_to 'Destroy', selected_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

