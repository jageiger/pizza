<p id="notice"><%= notice %></p>

<h1>Listing Selected Modifiers</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Cart item</th>
      <th>Modifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selected_modifiers.each do |selected_modifier| %>
      <tr>
        <td><%= selected_modifier.item_id %></td>
        <td><%= selected_modifier.cart_item_id %></td>
        <td><%= selected_modifier.modifier_id %></td>
        <td><%= link_to 'Show', selected_modifier %></td>
        <td><%= link_to 'Edit', edit_selected_modifier_path(selected_modifier) %></td>
        <td><%= link_to 'Destroy', selected_modifier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

